# Backend Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Keys (Required - Add your own keys)
ANTHROPIC_API_KEY=sk-ant-your-key-here  # Required for Claude models
OPENAI_API_KEY=sk-proj-your-key-here     # Required for embeddings (conversation quality)

# Optional API Keys
GOOGLE_API_KEY=
MISTRAL_API_KEY=

# Database Configuration
# Note: docker-compose.yml overrides this with PostgreSQL in development
DATABASE_URL=postgresql://quorum:quorum_dev_password@postgres:5432/quorum_dev

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting (Optional - Redis)
REDIS_URL=redis://localhost:6379/0
ENABLE_RATE_LIMITING=false

# Security
SECRET_KEY=your-secret-key-change-in-production

# LiteLLM Configuration
LITELLM_LOG_LEVEL=INFO
LITELLM_TELEMETRY=false
