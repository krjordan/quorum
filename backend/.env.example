# Application
ENVIRONMENT=development
DEBUG=true
VERSION=1.0.0

# API Keys (REQUIRED)
OPENAI_API_KEY=sk-your-openai-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# LLM Configuration
LLM_TIMEOUT=60
DEFAULT_MODEL=gpt-3.5-turbo
MAX_TOKENS_LIMIT=4096

# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:///./data/quorum.db

# PostgreSQL (recommended for production with pgvector support)
# DATABASE_URL=postgresql://user:password@localhost:5432/quorum
# For Docker:
# DATABASE_URL=postgresql://quorum_user:quorum_pass@postgres:5432/quorum_db

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Redis (Optional - for rate limiting)
REDIS_URL=redis://localhost:6379/0
ENABLE_RATE_LIMITING=false

# Security
SECRET_KEY=change-this-in-production-to-a-secure-random-key

# Server
HOST=0.0.0.0
PORT=8000

# Logging
LOG_LEVEL=INFO
